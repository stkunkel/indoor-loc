#ifndef MATH_UTILS_H_
#define MATH_UTILS_H_

#include "mpu9150/mpl/mlmath.h"

#define NUMBER_OF_AXES		3			//x, y, z
#define QUATERNION_AMOUNT	4			//w, x, y, z rotational angles


void eulerGetSigma(long quat[QUATERNION_AMOUNT], double* sigma);
void eulerGetTheta(long quat[QUATERNION_AMOUNT], double* theta);
void eulerGetPsi(long quat[QUATERNION_AMOUNT], double* psi)
#endif /* MATH_UTILS_H_ */
