#ifndef QUATERNION_H_
#define QUATERNION_H_



#endif /* QUATERNION_H_ */

/*
 * Quaternion Struct
 */
typedef struct {
	float w, x, y, z;
} Quaternion;


/*
 * Functions
 */
float getQuaternionLength(Quaternion* quat);
void normalizeQuaternion(Quaternion* quat);
void getQuaternionConjugate(Quaternion* quat, Quaternion* conjugate);
void addQuaternions(Quaternion* quat1, Quaternion* quat2, Quaternion* result);
void substractQuaternions(Quaternion* quat1, Quaternion* quat2, Quaternion* result);
void multiplyQuaternions(Quaternion* quat1, Quaternion* quat2, Quaternion* result);
