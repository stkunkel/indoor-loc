/*
 * Includes
 */
#include "time_utils.h"

/*
 * Get elapsed runtime in s
 * Returns elapsed runtime in s
 */
float getElapsedRuntimeS(){
	XTime time;
	XTime_GetTime(&time);
	return timestampToSec(time);
}

/*
 * Get elapsed runtime in us
 * Returns elapsed runtime in us
 */
float getElapsedRuntimeUS(){
	XTime time;
	XTime_GetTime(&time);
	return timestampToUSec(time);
}

/*
 * Convert Timestamp to s
 * In: timestamp
 * timestamp in s
 */
float timestampToSec(u64 timestamp) {
	return (float) timestamp / COUNTS_PER_SECOND;
}

/*
 * Convert Timestamp to us
 * In: timestamp
 * timestamp in us
 */
float timestampToUSec(u64 timestamp) {
	return (float) timestamp / COUNTS_PER_USECOND;
}
